.alert {
	padding: 8px 8px 8px 14px;
	margin-right:0px;
	margin-bottom: 18px;
	-webkit-border-radius: 4px;
	-moz-border-radius: 4px;
	border-radius: 4px;
	padding-top: 14px;
	padding-bottom: 14px;
}

.alert p {
	overflow: hidden;
	word-wrap: break-word;
	margin-right:0px;
	padding-left: 8px;
	color: #555;
}

.alert .close {
  position: relative;
  top: -2px;
  right: -2px;
  line-height: 18px;
  float: right;
  font-size: 26px;
  font-weight: normal;
}
.alert-success  .close {
  background-color: #cfeaf8;
	color: #fff;
  margin-right: 10px;
}
.alert-error  .close {
  background-color: #cfeaf8;
	color: #fff;
  margin-right: 10px;
}

.messages {
  position: fixed;
  z-index: 9999;
  top: 60px;
  right: 20px;
  width: 350px;
}

.messages .alert-success {
	/*border: 1px solid #3ba354;*/
	border: 1px solid #2d92ca；
	color: #555;;
	background-color: #cfeaf8;
	font-size: 14px;
	opacity: 0.95000000000000001;
}

.messages .alert-error {
	margin-right:0px;
	 background-color: #cfeaf8;
  	border: 1px solid #2d92ca；
  	color: #555;
  	font-size: 14px;
  	opacity: 0.95000000000000001;
}



.spinner {
  width: 16px;
  height: 16px;
  position: relative;
  float: left;
  top: px;
  left: -8px;
  display: block;
}

.double-bounce1, .double-bounce2 {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #cfeaf8;
  opacity: 0.6;
  position: absolute;
  top: 0;
  left: 0;
   
  -webkit-animation: bounce 2.0s infinite ease-in-out;
  animation: bounce 2.0s infinite ease-in-out;
}
 
.double-bounce2 {
  -webkit-animation-delay: -1.0s;
  animation-delay: -1.0s;
}
 
@-webkit-keyframes bounce {
  0%, 100% { -webkit-transform: scale(0.0) }
  50% { -webkit-transform: scale(1.0) }
}
 
@keyframes bounce {
  0%, 100% {
    transform: scale(0.0);
    -webkit-transform: scale(0.0);
  } 50% {
    transform: scale(1.0);
    -webkit-transform: scale(1.0);
  }
}